<h3>New Article</h3>
<form {{action 'createXML' model on='submit'}}>
  <div class="row">
    <div class="columns small-12">
      <label>
        Tipo de artigo:
        {{ember-selectize
          content=documentType
          selection=model.documentType
          optionValuePath='id'
          optionLabelPath='description'
        }}
      </label>
    </div>
    <div class="columns small-12">
      <label>
        LÃ­ngua:
        {{ember-selectize
          content=languages
